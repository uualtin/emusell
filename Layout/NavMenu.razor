@inject NavigationManager Navigation
@implements IDisposable

<nav class="navbar navbar-expand-lg navbar-emusell sticky-top">
    <div class="container">
        <NavLink class="navbar-brand" href="/" Match="NavLinkMatch.All">
            <i class="bi bi-shop me-2"></i>Emusell
        </NavLink>

        <button class="navbar-toggler" type="button" @onclick="ToggleMobileMenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse @(isMobileMenuOpen ? "show" : "collapse")" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                        <i class="bi bi-house me-1"></i> @GetText("Nav.Home")
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/urunler">
                        <i class="bi bi-grid me-1"></i> @GetText("Nav.Products")
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/kategoriler">
                        <i class="bi bi-tags me-1"></i> @GetText("Nav.Categories")
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="/hakkimizda">
                        <i class="bi bi-info-circle me-1"></i> @GetText("Nav.About")
                    </NavLink>
                </li>
            </ul>

            <div class="d-flex align-items-center gap-2">
                @if (Auth?.IsAuthenticated == true)
                {
                    <!-- Cart Button for Buyers -->
                    @if (Auth.IsBuyer)
                    {
                        <NavLink class="btn btn-outline-secondary btn-sm" href="/sepet">
                            <i class="bi bi-cart me-1"></i> @GetText("Nav.Cart")
                        </NavLink>
                    }

                    <!-- User Dropdown -->
                    <div class="dropdown position-relative">
                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" @onclick="ToggleUserDropdown" @onclick:stopPropagation="true">
                            <i class="bi bi-person-circle me-1"></i> @Auth.CurrentUser?.FullName
                        </button>
                        @if (isUserDropdownOpen)
                        {
                            <div class="dropdown-backdrop" @onclick="CloseAllDropdowns"></div>
                            <ul class="dropdown-menu dropdown-menu-end show">
                                @if (Auth.IsAdmin)
                                {
                                    <li class="dropdown-header">Admin</li>
                                    <li><a class="dropdown-item" href="/admin/dashboard" @onclick="CloseAllDropdowns"><i class="bi bi-speedometer2 me-2"></i>@GetText("Nav.AdminPanel")</a></li>
                                    <li><a class="dropdown-item" href="/admin/kullanicilar" @onclick="CloseAllDropdowns"><i class="bi bi-people me-2"></i>@GetText("Nav.UserManagement")</a></li>
                                    <li><a class="dropdown-item" href="/admin/kategoriler" @onclick="CloseAllDropdowns"><i class="bi bi-tags me-2"></i>@GetText("Nav.CategoryManagement")</a></li>
                                    <li><a class="dropdown-item" href="/admin/siparisler" @onclick="CloseAllDropdowns"><i class="bi bi-box-seam me-2"></i>@GetText("Nav.OrderManagement")</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                @if (Auth.IsSeller)
                                {
                                    <li class="dropdown-header">Satıcı Paneli</li>
                                    <li><a class="dropdown-item" href="/satici/dashboard" @onclick="CloseAllDropdowns"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/satici/urunlerim" @onclick="CloseAllDropdowns"><i class="bi bi-box me-2"></i>Ürünlerim</a></li>
                                    <li><a class="dropdown-item" href="/satici/urun-ekle" @onclick="CloseAllDropdowns"><i class="bi bi-plus-circle me-2"></i>Ürün Ekle</a></li>
                                <li><a class="dropdown-item" href="/satici/siparisler" @onclick="CloseAllDropdowns"><i class="bi bi-receipt me-2"></i>Siparişlerim</a></li>
                                        <li><a class="dropdown-item" href="/satici/degerlendirmeler" @onclick="CloseAllDropdowns"><i class="bi bi-star me-2"></i>Değerlendirmeler</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                }
                                @if (Auth.IsBuyer)
                                {
                                    <li class="dropdown-header">Hesabım</li>
                                    <li><a class="dropdown-item" href="/hesabim/dashboard" @onclick="CloseAllDropdowns"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/hesabim/siparislerim" @onclick="CloseAllDropdowns"><i class="bi bi-bag me-2"></i>Siparişlerim</a></li>
                                    <li><a class="dropdown-item" href="/hesabim/degerlendirmelerim" @onclick="CloseAllDropdowns"><i class="bi bi-star me-2"></i>Değerlendirmelerim</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                }
                                <li><a class="dropdown-item" href="/profil" @onclick="CloseAllDropdowns"><i class="bi bi-person me-2"></i>@GetText("Nav.Profile")</a></li>
                                <li><button class="dropdown-item text-danger" @onclick="Logout"><i class="bi bi-box-arrow-right me-2"></i>@GetText("Nav.Logout")</button></li>
                            </ul>
                        }
                    </div>
                }
                else
                {
                    <NavLink class="btn btn-outline-secondary btn-sm" href="/giris">
                        <i class="bi bi-box-arrow-in-right me-1"></i> @GetText("Nav.Login")
                    </NavLink>
                    <NavLink class="btn btn-primary btn-sm" href="/kayit">
                        <i class="bi bi-person-plus me-1"></i> @GetText("Nav.Register")
                    </NavLink>
                }

                <!-- Language Dropdown -->
                <div class="dropdown position-relative">
                    <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" @onclick="ToggleLangDropdown" @onclick:stopPropagation="true" title="@GetText("Nav.Language")">
                        <i class="bi bi-globe me-1"></i> @(Localization?.CurrentLanguage?.ToUpper() ?? "TR")
                    </button>
                    @if (isLangDropdownOpen)
                    {
                        <div class="dropdown-backdrop" @onclick="CloseAllDropdowns"></div>
                        <ul class="dropdown-menu dropdown-menu-end show">
                            <li><button class="dropdown-item @(Localization?.CurrentLanguage == "tr" ? "active" : "")" @onclick='() => ChangeLanguage("tr")'>🇹🇷 Türkçe</button></li>
                            <li><button class="dropdown-item @(Localization?.CurrentLanguage == "en" ? "active" : "")" @onclick='() => ChangeLanguage("en")'>🇬🇧 English</button></li>
                        </ul>
                    }
                </div>

                <!-- Theme Toggle -->
                <button class="theme-toggle-btn" @onclick="ToggleTheme" title="@GetText("Nav.ToggleTheme")">
                    <i class="bi @(Theme?.IsDarkMode == true ? "bi-sun" : "bi-moon")"></i>
                </button>
            </div>
        </div>
    </div>
</nav>

<style>
    .dropdown-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 1000;
        background: transparent;
    }
    
    .dropdown-menu.show {
        display: block;
        position: absolute;
        z-index: 1001;
    }
    
    .dropdown-header {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        color: #6c757d;
    }
</style>

@code {
    [CascadingParameter(Name = "AuthService")]
    public AuthService? Auth { get; set; }
    
    [CascadingParameter(Name = "ThemeService")]
    public ThemeService? Theme { get; set; }
    
    [CascadingParameter(Name = "Localization")]
    public LocalizationService? Localization { get; set; }

    private bool isUserDropdownOpen = false;
    private bool isLangDropdownOpen = false;
    private bool isMobileMenuOpen = false;

    protected override void OnInitialized()
    {
        if (Auth != null)
            Auth.OnAuthStateChanged += HandleStateChanged;
        if (Theme != null)
            Theme.OnThemeChanged += HandleStateChanged;
        if (Localization != null)
            Localization.OnLanguageChanged += HandleStateChanged;
    }

    private string GetText(string key)
    {
        return Localization?[key] ?? key;
    }

    private void HandleStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleUserDropdown()
    {
        isLangDropdownOpen = false;
        isUserDropdownOpen = !isUserDropdownOpen;
    }

    private void ToggleLangDropdown()
    {
        isUserDropdownOpen = false;
        isLangDropdownOpen = !isLangDropdownOpen;
    }

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseAllDropdowns()
    {
        isUserDropdownOpen = false;
        isLangDropdownOpen = false;
    }

    private async Task ToggleTheme()
    {
        if (Theme != null)
            await Theme.ToggleThemeAsync();
    }

    private async Task ChangeLanguage(string language)
    {
        CloseAllDropdowns();
        if (Localization != null)
            await Localization.SetLanguageAsync(language);
    }

    private async Task Logout()
    {
        CloseAllDropdowns();
        if (Auth != null)
            await Auth.LogoutAsync();
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        if (Auth != null)
            Auth.OnAuthStateChanged -= HandleStateChanged;
        if (Theme != null)
            Theme.OnThemeChanged -= HandleStateChanged;
        if (Localization != null)
            Localization.OnLanguageChanged -= HandleStateChanged;
    }
}
