@page "/kayit"
@inject AuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Kayıt Ol - Emusell</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus display-4 text-primary"></i>
                        <h2 class="mt-3">Kayıt Ol</h2>
                        <p class="text-muted">Yeni bir hesap oluşturun</p>
                    </div>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">
                            <i class="bi bi-check-circle me-2"></i>@successMessage
                        </div>
                    }

                    <EditForm Model="@registerModel" OnValidSubmit="HandleRegister" FormName="RegisterForm">
                        <DataAnnotationsValidator />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="fullName" class="form-label">Ad Soyad</label>
                                <InputText id="fullName" @bind-Value="registerModel.FullName" class="form-control" placeholder="Adınız Soyadınız" />
                                <ValidationMessage For="@(() => registerModel.FullName)" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Telefon</label>
                                <InputText id="phone" @bind-Value="registerModel.Phone" class="form-control" placeholder="0555 555 55 55" />
                                <ValidationMessage For="@(() => registerModel.Phone)" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <InputText id="email" @bind-Value="registerModel.Email" class="form-control" placeholder="ornek@email.com" />
                            <ValidationMessage For="@(() => registerModel.Email)" class="text-danger" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="password" class="form-label">Şifre</label>
                                <InputText id="password" @bind-Value="registerModel.Password" type="password" class="form-control" placeholder="********" />
                                <ValidationMessage For="@(() => registerModel.Password)" class="text-danger" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                                <InputText id="confirmPassword" @bind-Value="registerModel.ConfirmPassword" type="password" class="form-control" placeholder="********" />
                                <ValidationMessage For="@(() => registerModel.ConfirmPassword)" class="text-danger" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hesap Türü</label>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="card role-card @(registerModel.Role == UserRole.Buyer ? "selected" : "")" @onclick="() => registerModel.Role = UserRole.Buyer">
                                        <div class="card-body text-center p-3">
                                            <i class="bi bi-bag display-5 mb-2 @(registerModel.Role == UserRole.Buyer ? "text-primary" : "text-muted")"></i>
                                            <h6 class="mb-1">Alıcı</h6>
                                            <small class="text-muted">Ürün satın almak istiyorum</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card role-card @(registerModel.Role == UserRole.Seller ? "selected" : "")" @onclick="() => registerModel.Role = UserRole.Seller">
                                        <div class="card-body text-center p-3">
                                            <i class="bi bi-shop display-5 mb-2 @(registerModel.Role == UserRole.Seller ? "text-primary" : "text-muted")"></i>
                                            <h6 class="mb-1">Satıcı</h6>
                                            <small class="text-muted">Ürün satmak istiyorum</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <InputCheckbox id="acceptTerms" @bind-Value="registerModel.AcceptTerms" class="form-check-input" />
                            <label class="form-check-label" for="acceptTerms">
                                <a href="/kullanim-kosullari" target="_blank">Kullanım Koşulları</a>'nı kabul ediyorum
                            </label>
                            <ValidationMessage For="@(() => registerModel.AcceptTerms)" class="text-danger" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-person-plus me-2"></i>Kayıt Ol
                            </button>
                        </div>
                    </EditForm>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-2">Zaten hesabınız var mı?</p>
                        <NavLink href="/giris" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                        </NavLink>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .role-card {
        cursor: pointer;
        transition: all 0.2s ease;
        border: 2px solid #dee2e6;
    }
    
    .role-card:hover {
        border-color: var(--bs-primary);
        transform: translateY(-2px);
    }
    
    .role-card.selected {
        border-color: var(--bs-primary);
        background-color: rgba(99, 102, 241, 0.05);
    }
</style>

@code {
    private RegisterModel registerModel = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isLoading;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;
        successMessage = null;

        if (registerModel.Password != registerModel.ConfirmPassword)
        {
            errorMessage = "Şifreler eşleşmiyor.";
            isLoading = false;
            return;
        }

        if (!registerModel.AcceptTerms)
        {
            errorMessage = "Kullanım koşullarını kabul etmelisiniz.";
            isLoading = false;
            return;
        }

        var (success, message) = await AuthService.RegisterAsync(
            registerModel.Email,
            registerModel.Password,
            registerModel.FullName,
            registerModel.Phone,
            registerModel.Role
        );

        if (success)
        {
            successMessage = message;
            // Redirect based on role
            if (registerModel.Role == UserRole.Seller)
                Navigation.NavigateTo("/satici/dashboard");
            else
                Navigation.NavigateTo("/hesabim/dashboard");
        }
        else
        {
            errorMessage = message;
        }

        isLoading = false;
    }

    public class RegisterModel
    {
        public string Email { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
        public string ConfirmPassword { get; set; } = string.Empty;
        public string FullName { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public UserRole Role { get; set; } = UserRole.Buyer;
        public bool AcceptTerms { get; set; }
    }
}
