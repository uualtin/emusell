@page "/sifremi-unuttum"
@inject UserService UserService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Şifremi Unuttum - Emusell</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-body p-4">
                    @if (step == 1)
                    {
                        <!-- Adım 1: E-posta Girişi -->
                        <div class="text-center mb-4">
                            <i class="bi bi-key display-4 text-warning"></i>
                            <h2 class="mt-3">Şifremi Unuttum</h2>
                            <p class="text-muted">Kayıtlı e-posta adresinizi girin</p>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta Adresi</label>
                            <input type="email" id="email" @bind="email" class="form-control" placeholder="ornek@email.com" />
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary btn-lg" @onclick="VerifyEmail" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-search me-2"></i>Hesabı Bul
                            </button>
                            <a href="/giris" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Giriş Sayfasına Dön
                            </a>
                        </div>
                    }
                    else if (step == 2)
                    {
                        <!-- Adım 2: Yeni Şifre Belirleme -->
                        <div class="text-center mb-4">
                            <i class="bi bi-shield-lock display-4 text-success"></i>
                            <h2 class="mt-3">Yeni Şifre Belirle</h2>
                            <p class="text-muted">@foundUser?.Email için yeni şifre oluşturun</p>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                            </div>
                        }

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Prototip Modu:</strong> Gerçek sistemde bu adım e-posta doğrulaması ile yapılır.
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Yeni Şifre</label>
                            <input type="password" id="newPassword" @bind="newPassword" class="form-control" placeholder="En az 6 karakter" />
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                            <input type="password" id="confirmPassword" @bind="confirmPassword" class="form-control" placeholder="Şifreyi tekrar girin" />
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" @onclick="ResetPassword" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check-lg me-2"></i>Şifreyi Değiştir
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="() => step = 1">
                                <i class="bi bi-arrow-left me-2"></i>Geri Dön
                            </button>
                        </div>
                    }
                    else if (step == 3)
                    {
                        <!-- Adım 3: Başarılı -->
                        <div class="text-center">
                            <i class="bi bi-check-circle display-1 text-success"></i>
                            <h2 class="mt-3">Şifre Değiştirildi!</h2>
                            <p class="text-muted mb-4">Şifreniz başarıyla güncellendi. Yeni şifrenizle giriş yapabilirsiniz.</p>
                            <a href="/giris" class="btn btn-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int step = 1;
    private string email = "";
    private string newPassword = "";
    private string confirmPassword = "";
    private string? errorMessage;
    private bool isLoading;
    private User? foundUser;

    private async Task VerifyEmail()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(email))
        {
            errorMessage = "Lütfen e-posta adresinizi girin.";
            return;
        }

        isLoading = true;

        try
        {
            foundUser = await UserService.GetUserByEmailAsync(email);
            
            if (foundUser == null)
            {
                errorMessage = "Bu e-posta adresi ile kayıtlı bir hesap bulunamadı.";
            }
            else if (!foundUser.IsActive)
            {
                errorMessage = "Bu hesap askıya alınmış. Lütfen yönetici ile iletişime geçin.";
            }
            else
            {
                step = 2;
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Bir hata oluştu: {ex.Message}";
        }

        isLoading = false;
    }

    private async Task ResetPassword()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(newPassword))
        {
            errorMessage = "Lütfen yeni şifrenizi girin.";
            return;
        }

        if (newPassword.Length < 6)
        {
            errorMessage = "Şifre en az 6 karakter olmalıdır.";
            return;
        }

        if (newPassword != confirmPassword)
        {
            errorMessage = "Şifreler eşleşmiyor.";
            return;
        }

        if (foundUser == null)
        {
            errorMessage = "Kullanıcı bulunamadı. Lütfen tekrar deneyin.";
            step = 1;
            return;
        }

        isLoading = true;

        try
        {
            await UserService.ChangePasswordAsync(foundUser.Id, newPassword);
            step = 3;
        }
        catch (Exception ex)
        {
            errorMessage = $"Şifre değiştirilemedi: {ex.Message}";
        }

        isLoading = false;
    }
}
