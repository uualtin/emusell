@page "/hesabim/degerlendirmelerim"
@inject AuthService AuthService
@inject ReviewService ReviewService
@rendermode InteractiveServer

<PageTitle>Değerlendirmelerim - Emusell</PageTitle>

@if (!AuthService.IsAuthenticated)
{
    <div class="container py-5 text-center">
        <i class="bi bi-person-x display-1 text-warning"></i>
        <h2 class="mt-3">Giriş Yapmalısınız</h2>
        <p class="text-muted">Değerlendirmelerinizi görmek için giriş yapın.</p>
        <a href="/giris" class="btn btn-primary">Giriş Yap</a>
    </div>
}
else
{
    <div class="container py-4">
        <h1 class="mb-4"><i class="bi bi-star me-2"></i>Değerlendirmelerim</h1>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show">
                @message
                <button type="button" class="btn-close" @onclick="() => message = null"></button>
            </div>
        }

        @if (reviews?.Any() == true)
        {
            <div class="row g-4">
                @foreach (var review in reviews)
                {
                    <div class="col-md-6">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div class="d-flex">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi @(i <= review.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="card-text">@review.Comment</p>
                            </div>
                            <div class="card-footer bg-transparent d-flex justify-content-between">
                                <a href="/urun/@review.ProductId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye me-1"></i>Ürünü Gör
                                </a>
                                <div>
                                    <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => EditReview(review)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteReview(review.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-star display-1 text-muted"></i>
                <h3 class="mt-3 text-muted">Henüz değerlendirme yapmadınız</h3>
                <p class="text-muted">Satın aldığınız ürünleri değerlendirin!</p>
                <a href="/hesabim/siparislerim" class="btn btn-primary">
                    <i class="bi bi-box-seam me-2"></i>Siparişlerime Git
                </a>
            </div>
        }
    </div>

    <!-- Edit Modal -->
    @if (showEditModal && editingReview != null)
    {
        <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Değerlendirmeyi Düzenle</h5>
                        <button type="button" class="btn-close" @onclick="CloseEditModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Puan</label>
                            <div class="d-flex gap-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    var rating = i;
                                    <button type="button" class="btn btn-lg p-0" @onclick="() => editingReview.Rating = rating">
                                        <i class="bi @(rating <= editingReview.Rating ? "bi-star-fill text-warning" : "bi-star text-muted") fs-3"></i>
                                    </button>
                                }
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Yorum</label>
                            <textarea class="form-control" rows="4" @bind="editingReview.Comment"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">İptal</button>
                        <button type="button" class="btn btn-primary" @onclick="SaveReview">
                            <i class="bi bi-check-lg me-2"></i>Kaydet
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<Review>? reviews;
    private string? message;
    private bool isError;
    private bool showEditModal;
    private Review? editingReview;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated)
        {
            await LoadReviews();
        }
    }

    private async Task LoadReviews()
    {
        var userId = AuthService.CurrentUser?.Id ?? "";
        reviews = await ReviewService.GetReviewsByUserAsync(userId);
    }

    private void EditReview(Review review)
    {
        editingReview = new Review
        {
            Id = review.Id,
            ProductId = review.ProductId,
            UserId = review.UserId,
            UserName = review.UserName,
            Rating = review.Rating,
            Comment = review.Comment
        };
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editingReview = null;
    }

    private async Task SaveReview()
    {
        if (editingReview != null)
        {
            await ReviewService.UpdateReviewAsync(editingReview);
            message = "Değerlendirme güncellendi.";
            isError = false;
            showEditModal = false;
            await LoadReviews();
        }
    }

    private async Task DeleteReview(string id)
    {
        await ReviewService.DeleteReviewAsync(id);
        message = "Değerlendirme silindi.";
        isError = false;
        await LoadReviews();
    }
}
