@page "/kategoriler/{Slug}"
@inject CategoryService CategoryService
@inject ProductService ProductService
@rendermode InteractiveServer

<PageTitle>@(category?.Name ?? "Kategori") - Emusell</PageTitle>

<div class="container py-4">
    @if (category == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Yükleniyor...</span>
            </div>
        </div>
    }
    else
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="/kategoriler">Kategoriler</a></li>
                @if (parentCategory != null)
                {
                    <li class="breadcrumb-item"><a href="/kategoriler/@parentCategory.Slug">@parentCategory.Name</a></li>
                }
                <li class="breadcrumb-item active">@category.Name</li>
            </ol>
        </nav>

        <!-- Kategori Başlık -->
        <div class="d-flex align-items-center mb-4">
            <div class="category-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                <i class="@category.Icon fs-3"></i>
            </div>
            <div>
                <h1 class="mb-0">@category.Name</h1>
                <p class="text-muted mb-0">@category.Description</p>
            </div>
        </div>

        <!-- Alt Kategoriler (Eğer ana kategoriyse) -->
        @if (isMainCategory && subCategories?.Any() == true)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Alt Kategoriler</h6>
                    <div class="d-flex flex-wrap gap-2">
                        <a href="/kategoriler/@category.Slug" class="btn @(selectedSubCategoryId == null ? "btn-primary" : "btn-outline-primary") btn-sm">
                            Tümü (@products?.Count)
                        </a>
                        @foreach (var subCat in subCategories)
                        {
                            var subProducts = allProducts?.Where(p => p.CategoryId == subCat.Id).ToList();
                            <a href="/kategoriler/@subCat.Slug" class="btn btn-outline-secondary btn-sm">
                                @subCat.Name (@(subProducts?.Count ?? 0))
                            </a>
                        }
                    </div>
                </div>
            </div>
        }

        <!-- Ürün Listesi -->
        @if (products?.Any() == true)
        {
            <p class="text-muted mb-3">@products.Count ürün bulundu</p>
            <div class="row g-4">
                @foreach (var product in products)
                {
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
                        <div class="card h-100 product-card">
                            <a href="/urun/@product.Id" class="text-decoration-none">
                                <div class="position-relative">
                                    <img src="@product.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/400x200'" />
                                    <span class="position-absolute top-0 end-0 m-2 badge bg-secondary">@GetConditionText(product.Condition)</span>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title text-dark">@product.Title</h6>
                                    <p class="card-text text-muted small mb-2">
                                        <i class="bi bi-tag me-1"></i>@product.CategoryName
                                    </p>
                                    <p class="card-text text-muted small mb-2">
                                        <i class="bi bi-geo-alt me-1"></i>@product.Location
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fs-5 fw-bold text-primary">
                                            @product.Price.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))
                                        </span>
                                        <small class="text-muted">
                                            <i class="bi bi-eye me-1"></i>@product.ViewCount
                                        </small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h3 class="mt-3 text-muted">Bu kategoride ürün bulunamadı</h3>
                <p class="text-muted">Daha sonra tekrar kontrol edin veya diğer kategorileri inceleyin.</p>
                <a href="/kategoriler" class="btn btn-primary">
                    <i class="bi bi-tags me-2"></i>Diğer Kategoriler
                </a>
            </div>
        }
    }
</div>

<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>

@code {
    [Parameter]
    public string? Slug { get; set; }

    private Category? category;
    private Category? parentCategory;
    private List<Category>? subCategories;
    private List<Product>? products;
    private List<Product>? allProducts;
    private bool isMainCategory;
    private string? selectedSubCategoryId;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Slug))
        {
            category = await CategoryService.GetCategoryBySlugAsync(Slug);
            if (category != null)
            {
                // Ana kategori mi yoksa alt kategori mi?
                isMainCategory = category.ParentCategoryId == null;

                if (isMainCategory)
                {
                    // Ana kategoriyse alt kategorileri ve tüm ürünleri getir
                    subCategories = await CategoryService.GetSubcategoriesAsync(category.Id);
                    
                    // Ana kategorideki ve alt kategorilerdeki tüm ürünleri getir
                    var mainProducts = await ProductService.GetProductsByCategoryAsync(category.Id);
                    var subCategoryIds = subCategories?.Select(c => c.Id).ToList() ?? new List<string>();
                    
                    allProducts = new List<Product>();
                    allProducts.AddRange(mainProducts ?? new List<Product>());
                    
                    foreach (var subCatId in subCategoryIds)
                    {
                        var subProducts = await ProductService.GetProductsByCategoryAsync(subCatId);
                        if (subProducts != null)
                        {
                            allProducts.AddRange(subProducts);
                        }
                    }
                    
                    products = allProducts;
                }
                else
                {
                    // Alt kategoriyse üst kategoriyi bul
                    if (!string.IsNullOrEmpty(category.ParentCategoryId))
                    {
                        parentCategory = await CategoryService.GetCategoryByIdAsync(category.ParentCategoryId);
                    }
                    
                    products = await ProductService.GetProductsByCategoryAsync(category.Id);
                }
            }
        }
    }

    private string GetConditionText(ProductCondition condition) => condition switch
    {
        ProductCondition.Yeni => "Yeni",
        ProductCondition.SifirGibi => "Sıfır Gibi",
        ProductCondition.Iyi => "İyi",
        ProductCondition.Orta => "Orta",
        ProductCondition.Kullanilmis => "Kullanılmış",
        _ => "Bilinmiyor"
    };
}
