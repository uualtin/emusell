@page "/satici/dashboard"
@inject AuthService AuthService
@inject ProductService ProductService
@inject OrderService OrderService
@inject ReviewService ReviewService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Satıcı Paneli - Emusell</PageTitle>

@if (!AuthService.IsSeller && !AuthService.IsAdmin)
{
    <div class="container py-5 text-center">
        <i class="bi bi-shield-exclamation display-1 text-danger"></i>
        <h2 class="mt-3">Yetkisiz Erişim</h2>
        <p class="text-muted">Bu sayfayı görüntüleme yetkiniz yok.</p>
        <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
    </div>
}
else
{
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0"><i class="bi bi-shop me-2"></i>Satıcı Paneli</h1>
                <p class="text-muted mb-0">Hoş geldiniz, @AuthService.CurrentUser?.FullName</p>
            </div>
            <a href="/satici/urun-ekle" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Yeni Ürün Ekle
            </a>
        </div>

        <!-- İstatistik Kartları -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Toplam Ürün</h6>
                                <h2 class="mb-0">@totalProducts</h2>
                            </div>
                            <i class="bi bi-box display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/satici/urunlerim" class="text-white text-decoration-none">
                            Ürünleri Gör <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Aktif İlan</h6>
                                <h2 class="mb-0">@activeProducts</h2>
                            </div>
                            <i class="bi bi-check-circle display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="text-white-50">Satışta olan ürünler</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-dark h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-dark opacity-75">Toplam Sipariş</h6>
                                <h2 class="mb-0">@totalOrders</h2>
                            </div>
                            <i class="bi bi-receipt display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/satici/siparisler" class="text-dark text-decoration-none">
                            Siparişleri Gör <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Toplam Kazanç</h6>
                                <h2 class="mb-0">@totalEarnings.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</h2>
                            </div>
                            <i class="bi bi-currency-dollar display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="text-white-50">Tamamlanan satışlar</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Satıcı Puanı -->
        <div class="row g-4 mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-3 text-center border-end">
                                <div class="display-4 fw-bold text-warning mb-1">
                                    @sellerRating.ToString("0.0")
                                </div>
                                <div class="mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= Math.Round(sellerRating) ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                                    }
                                </div>
                                <p class="text-muted mb-0">@totalReviews değerlendirme</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-3">Puan Dağılımı</h6>
                                @foreach (var item in ratingDistribution.OrderByDescending(x => x.Key))
                                {
                                    var percentage = totalReviews > 0 ? (item.Value * 100.0 / totalReviews) : 0;
                                    <div class="d-flex align-items-center mb-1">
                                        <span class="me-2 small" style="width: 50px;">@item.Key <i class="bi bi-star-fill text-warning small"></i></span>
                                        <div class="progress flex-grow-1" style="height: 8px;">
                                            <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                                        </div>
                                        <span class="ms-2 small text-muted" style="width: 30px;">@item.Value</span>
                                    </div>
                                }
                            </div>
                            <div class="col-md-3 text-center">
                                @if (unansweredReviews > 0)
                                {
                                    <div class="alert alert-warning py-2 mb-2">
                                        <i class="bi bi-chat-dots me-1"></i>
                                        <strong>@unansweredReviews</strong> yanıtlanmamış
                                    </div>
                                }
                                <a href="/satici/degerlendirmeler" class="btn btn-outline-primary">
                                    <i class="bi bi-star me-2"></i>Değerlendirmeleri Gör
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Hızlı İşlemler -->
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Hızlı İşlemler</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a href="/satici/urun-ekle" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Yeni Ürün Ekle
                            </a>
                            <a href="/satici/urunlerim" class="btn btn-outline-primary">
                                <i class="bi bi-box me-2"></i>Ürünlerimi Yönet
                            </a>
                            <a href="/satici/siparisler" class="btn btn-outline-success">
                                <i class="bi bi-receipt me-2"></i>Siparişleri Görüntüle
                            </a>
                            <a href="/profil" class="btn btn-outline-secondary">
                                <i class="bi bi-person me-2"></i>Profil Ayarları
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Son Siparişler -->
            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Son Siparişler</h5>
                        <a href="/satici/siparisler" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
                    </div>
                    <div class="card-body">
                        @if (recentOrders?.Any() == true)
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Sipariş No</th>
                                            <th>Ürün</th>
                                            <th>Tarih</th>
                                            <th>Tutar</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in recentOrders.Take(5))
                                        {
                                            <tr>
                                                <td>@order.OrderNumber</td>
                                                <td>@(order.Items?.FirstOrDefault()?.ProductTitle ?? "-")</td>
                                                <td>@order.CreatedAt.ToString("dd.MM.yyyy")</td>
                                                <td>@order.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                                        @GetStatusDisplayName(order.Status)
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-inbox display-4 text-muted"></i>
                                <p class="text-muted mt-2">Henüz sipariş yok</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Bekleyen Siparişler -->
        @if (pendingOrders > 0)
        {
            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle me-3 fs-4"></i>
                        <div>
                            <strong>@pendingOrders adet bekleyen sipariş var!</strong>
                            <p class="mb-0">Siparişleri onaylamayı unutmayın.</p>
                        </div>
                        <a href="/satici/siparisler" class="btn btn-warning ms-auto">Siparişleri Görüntüle</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private int totalProducts;
    private int activeProducts;
    private int totalOrders;
    private int pendingOrders;
    private double sellerRating;
    private int totalReviews;
    private int unansweredReviews;
    private Dictionary<int, int> ratingDistribution = new() { { 5, 0 }, { 4, 0 }, { 3, 0 }, { 2, 0 }, { 1, 0 } };
    private decimal totalEarnings;
    private List<Order>? recentOrders;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsSeller || AuthService.IsAdmin)
        {
            await LoadDashboardData();
        }
    }

    private async Task LoadDashboardData()
    {
        var sellerId = AuthService.CurrentUser?.Id ?? "";

        var products = await ProductService.GetProductsBySellerAsync(sellerId);
        totalProducts = products?.Count ?? 0;
        activeProducts = products?.Count(p => p.IsActive && !p.IsSold) ?? 0;

        recentOrders = await OrderService.GetOrdersBySellerAsync(sellerId);
        totalOrders = recentOrders?.Count ?? 0;
        pendingOrders = recentOrders?.Count(o => o.Status == OrderStatus.Pending) ?? 0;
        totalEarnings = recentOrders?.Where(o => o.Status == OrderStatus.Delivered).Sum(o => o.TotalAmount) ?? 0;

        // Değerlendirme istatistikleri
        sellerRating = await ReviewService.GetSellerAverageRatingAsync(sellerId);
        totalReviews = await ReviewService.GetSellerReviewCountAsync(sellerId);
        var unansweredList = await ReviewService.GetUnansweredReviewsBySellerAsync(sellerId);
        unansweredReviews = unansweredList?.Count ?? 0;
        ratingDistribution = await ReviewService.GetSellerRatingDistributionAsync(sellerId);
    }

    private string GetStatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "bg-warning",
        OrderStatus.Confirmed => "bg-info",
        OrderStatus.Shipped => "bg-primary",
        OrderStatus.Delivered => "bg-success",
        OrderStatus.Cancelled => "bg-danger",
        OrderStatus.Refunded => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetStatusDisplayName(OrderStatus status) => status switch
    {
        OrderStatus.Pending => "Beklemede",
        OrderStatus.Confirmed => "Onaylandı",
        OrderStatus.Shipped => "Kargoda",
        OrderStatus.Delivered => "Teslim Edildi",
        OrderStatus.Cancelled => "İptal",
        OrderStatus.Refunded => "İade",
        _ => "Bilinmiyor"
    };
}
