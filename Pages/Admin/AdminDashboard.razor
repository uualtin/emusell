@page "/admin/dashboard"
@inject AuthService AuthService
@inject UserService UserService
@inject ProductService ProductService
@inject OrderService OrderService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Admin Dashboard - Emusell</PageTitle>

@if (!AuthService.IsAdmin)
{
    <div class="container py-5 text-center">
        <i class="bi bi-shield-exclamation display-1 text-danger"></i>
        <h2 class="mt-3">Yetkisiz Erişim</h2>
        <p class="text-muted">Bu sayfayı görüntüleme yetkiniz yok.</p>
        <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
    </div>
}
else
{
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="mb-0"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h1>
                <p class="text-muted mb-0">Hoş geldiniz, @AuthService.CurrentUser?.FullName</p>
            </div>
        </div>

        <!-- İstatistik Kartları -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Toplam Kullanıcı</h6>
                                <h2 class="mb-0">@totalUsers</h2>
                            </div>
                            <i class="bi bi-people display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/admin/kullanicilar" class="text-white text-decoration-none">
                            Detayları Gör <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-success text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Toplam Ürün</h6>
                                <h2 class="mb-0">@totalProducts</h2>
                            </div>
                            <i class="bi bi-box-seam display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/urunler" class="text-white text-decoration-none">
                            Detayları Gör <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-warning text-dark h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-dark opacity-75">Toplam Sipariş</h6>
                                <h2 class="mb-0">@totalOrders</h2>
                            </div>
                            <i class="bi bi-cart-check display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="/admin/siparisler" class="text-dark text-decoration-none">
                            Detayları Gör <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card bg-info text-white h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50">Toplam Gelir</h6>
                                <h2 class="mb-0">@totalRevenue.ToString("C0", new System.Globalization.CultureInfo("tr-TR"))</h2>
                            </div>
                            <i class="bi bi-currency-dollar display-4 opacity-50"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <span class="text-white-50">Tamamlanan siparişler</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kullanıcı Dağılımı ve Hızlı İşlemler -->
        <div class="row g-4 mb-4">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Kullanıcı Dağılımı</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="bi bi-person-badge display-4 text-danger"></i>
                                    <h3 class="mt-2">@adminCount</h3>
                                    <p class="text-muted mb-0">Admin</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="bi bi-shop display-4 text-success"></i>
                                    <h3 class="mt-2">@sellerCount</h3>
                                    <p class="text-muted mb-0">Satıcı</p>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-3">
                                    <i class="bi bi-person display-4 text-primary"></i>
                                    <h3 class="mt-2">@buyerCount</h3>
                                    <p class="text-muted mb-0">Alıcı</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Hızlı İşlemler</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <a href="/admin/kullanicilar" class="btn btn-outline-primary w-100 p-3">
                                    <i class="bi bi-people d-block fs-3"></i>
                                    Kullanıcı Yönetimi
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/admin/kategoriler" class="btn btn-outline-success w-100 p-3">
                                    <i class="bi bi-tags d-block fs-3"></i>
                                    Kategori Yönetimi
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/admin/siparisler" class="btn btn-outline-warning w-100 p-3">
                                    <i class="bi bi-box-seam d-block fs-3"></i>
                                    Sipariş Yönetimi
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/urunler" class="btn btn-outline-info w-100 p-3">
                                    <i class="bi bi-grid d-block fs-3"></i>
                                    Tüm Ürünler
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sipariş Durumları -->
        <div class="row g-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Sipariş Durumları</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-warning">@pendingOrders</h4>
                                    <small class="text-muted">Beklemede</small>
                                </div>
                            </div>
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-info">@confirmedOrders</h4>
                                    <small class="text-muted">Onaylanan</small>
                                </div>
                            </div>
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-primary">@shippedOrders</h4>
                                    <small class="text-muted">Kargoda</small>
                                </div>
                            </div>
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-success">@deliveredOrders</h4>
                                    <small class="text-muted">Teslim</small>
                                </div>
                            </div>
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-danger">@cancelledOrders</h4>
                                    <small class="text-muted">İptal</small>
                                </div>
                            </div>
                            <div class="col-md-2 col-4 mb-3">
                                <div class="p-2 rounded bg-light">
                                    <h4 class="text-secondary">@refundedOrders</h4>
                                    <small class="text-muted">İade</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private int totalUsers;
    private int totalProducts;
    private int totalOrders;
    private decimal totalRevenue;
    private int adminCount;
    private int sellerCount;
    private int buyerCount;
    private int pendingOrders;
    private int confirmedOrders;
    private int shippedOrders;
    private int deliveredOrders;
    private int cancelledOrders;
    private int refundedOrders;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAdmin)
        {
            await LoadDashboardData();
        }
    }

    private async Task LoadDashboardData()
    {
        var users = await UserService.GetAllUsersAsync();
        totalUsers = users.Count;
        adminCount = users.Count(u => u.Role == UserRole.Admin);
        sellerCount = users.Count(u => u.Role == UserRole.Seller);
        buyerCount = users.Count(u => u.Role == UserRole.Buyer);

        totalProducts = await ProductService.GetTotalProductCountAsync();
        totalOrders = await OrderService.GetTotalOrderCountAsync();
        totalRevenue = await OrderService.GetTotalRevenueAsync();

        pendingOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Pending);
        confirmedOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Confirmed);
        shippedOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Shipped);
        deliveredOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Delivered);
        cancelledOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Cancelled);
        refundedOrders = await OrderService.GetOrderCountByStatusAsync(OrderStatus.Refunded);
    }
}
