@using Emusell.Models
@inject NavigationManager Navigation

<div class="card product-card h-100 shadow-sm">
    <div class="position-relative">
        <img src="@Product.ImageUrl" 
             class="card-img-top product-image" 
             alt="@Product.Title"
             loading="lazy" />
        @if (!string.IsNullOrEmpty(ConditionBadgeColor))
        {
            <span class="badge position-absolute top-0 end-0 m-2 @ConditionBadgeColor">
                @Product.Condition.ToString()
            </span>
        }
    </div>
    
    <div class="card-body d-flex flex-column">
        <div class="mb-2">
            <span class="badge bg-primary">@Product.CategoryName</span>
        </div>
        
        <h5 class="card-title text-truncate" title="@Product.Title">
            @Product.Title
        </h5>
        
        <p class="card-text text-muted small flex-grow-1" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
            @Product.Description
        </p>
        
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="h4 mb-0 text-primary">@Product.Price.ToString("N0") ₺</span>
                <small class="text-muted">
                    <i class="bi bi-eye me-1"></i>@Product.ViewCount
                </small>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <small class="text-muted">
                    <i class="bi bi-geo-alt me-1"></i>@Product.Location
                </small>
                <small class="text-muted">
                    @GetTimeAgo(Product.CreatedAt)
                </small>
            </div>
            
            <button class="btn btn-outline-primary w-100" @onclick="HandleClick">
                <i class="bi bi-eye me-2"></i>Detayları Gör
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Product Product { get; set; } = new();

    private string ConditionBadgeColor => Product.Condition switch
    {
        ProductCondition.Yeni => "bg-success",
        ProductCondition.SifirGibi => "bg-info",
        ProductCondition.Iyi => "bg-primary",
        ProductCondition.Orta => "bg-warning",
        ProductCondition.Kullanilmis => "bg-secondary",
        _ => ""
    };

    private void HandleClick()
    {
        Navigation.NavigateTo($"/urunler/{Product.Id}");
    }

    private string GetTimeAgo(DateTime date)
    {
        var timeSpan = DateTime.Now - date;
        
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} dk önce";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} saat önce";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays} gün önce";
        
        return date.ToString("dd MMM yyyy");
    }
}

<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid rgba(0,0,0,.125);
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15) !important;
    }

    .product-image {
        height: 200px;
        object-fit: cover;
    }
</style>